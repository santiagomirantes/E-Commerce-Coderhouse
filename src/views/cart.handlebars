<h1>Products</h1>

<div id="products">

  {{#if hasProducts}}

  {{#each products}}
    <div class="product">
      <p class="header">{{this.code}}</p>
      <h2>{{this.title}}</h2>
      <h3>{{this.price}}</h3>
      <p>{{this.description}}</p>
      <button onclick="deleteFromCart('{{../cart}}','{{this.id}}')">Delete from cart</button>
    </div>
  {{/each}}

  {{else}}

  <h2>Your cart hasnÂ´t got any product yet!</h2>

  {{/if}}


</div>

<button onclick="buy('{{cart}}')">Buy cart</button>
<button onclick="window.location.href='/products'">Go back to the products gallery</button>

